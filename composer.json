{
  "name": "imbo/imbo-b2-adapters",
  "type": "library",
  "description": "B2 adapters for Imbo",
  "keywords": [
    "imbo"
  ],
  "homepage": "https://imbo.io/",
  "license": "MIT",
  "authors": [
    {
      "name": "Christer Edvartsen",
      "email": "cogo@starzinger.net",
      "homepage": "https://github.com/christeredvartsen"
    },
    {
      "name": "Contributors",
      "homepage": "https://github.com/imbo"
    }
  ],
  "require": {
    "php": ">=8.3",
    "guzzlehttp/guzzle": "^7.10"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.92.3",
    "imbo/imbo": "dev-main",
    "imbo/imbo-adapters-sdk": "dev-main",
    "imbo/imbo-coding-standard": "^2.1.1",
    "phpstan/extension-installer": "^1.4.3",
    "phpstan/phpstan": "^2.1.33",
    "phpstan/phpstan-deprecation-rules": "^2.0.3",
    "phpstan/phpstan-phpunit": "^2.0.11",
    "phpunit/phpunit": "^12.5.4",
    "symfony/var-dumper": "^8.0.3"
  },
  "autoload": {
    "psr-4": {
      "Imbo\\Storage\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Imbo\\Storage\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test:coverage": "vendor/bin/phpunit --coverage-html build/coverage",
    "sa": "vendor/bin/phpstan analyse",
    "cs": "vendor/bin/php-cs-fixer check --diff",
    "cs:fix": "vendor/bin/php-cs-fixer fix --diff",
    "ci": [
      "@sa",
      "@test",
      "@cs"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
